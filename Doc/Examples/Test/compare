for i
do
  echo ' '
  echo '=============================   ../'$i'.in   =============================='
  diff ../$i.in in
  echo ' '
  echo '===============================   '$i'.out   =============================='
  diff $i.out out
  echo ' '
  echo '===============================   '$i'.erg   =============================='
  diff $i.erg erg
  echo ' '
  echo '===============================   '$i'.dif   =============================='
  diff $i.dif dif
done
